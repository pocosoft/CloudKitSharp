<Window x:Class="CloudKitSharp.SampleWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CloudKitSharp.SampleWPF"
        mc:Ignorable="d"
        Title="CloudKitSampleWPF" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Content="Sign in iCloud" HorizontalAlignment="Left" Margin="16" VerticalAlignment="Top" Click="Button_Click"/>
            <ScrollViewer Background="Black" Height="380">
                <TextBlock x:Name="DebugConsole" Foreground="White" Text="Debug console area"/>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
