<Window x:Class="CloudKitSharp.SampleWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CloudKitSharp.SampleWPF"
        mc:Ignorable="d"
        Title="CloudKitSampleWPF" Height="450" Width="800">
    <DockPanel>
        <StackPanel Orientation="Vertical">
            <Button Content="Get User caller" HorizontalAlignment="Left" Margin="16,0,16,0" VerticalAlignment="Top" Click="Button_Click"/>
            <Button Content="Get User discover" HorizontalAlignment="Left" Margin="16,0,16,0" VerticalAlignment="Top" Click="GetUserDiscoverButton_Click"/>
            <Button Content="Post Records query" HorizontalAlignment="Left" Margin="16,0,16,0" VerticalAlignment="Top" Click="PostRecordsQueryButton_Click"/>
            <Button Content="Post Records modify" HorizontalAlignment="Left" Margin="16,0,16,0" VerticalAlignment="Top" Click="PostRecordsModifyButton_Click"/>
        </StackPanel>
        <ScrollViewer VerticalAlignment="Stretch">
            <TextBox x:Name="DebugConsole"
                     Background="Black" Foreground="White"
                     Text="Debug console area"
                     IsReadOnly="True"/>
        </ScrollViewer>
    </DockPanel>
</Window>
